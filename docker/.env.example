# ============================================
# Multi-Claude Command Center Configuration
# ============================================

# Application
NODE_ENV=production
APP_URL=http://localhost:3000

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://mc3:your_secure_postgres_password_here@postgres:5432/mc3_db

# Redis
REDIS_URL=redis://redis:6379

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# GitHub
GITHUB_TOKEN=ghp_xxxxx

# Vercel
VERCEL_TOKEN=xxxxx
VERCEL_ORG_ID=team_xxxxx

# Cloudflare
CLOUDFLARE_API_TOKEN=xxxxx
CLOUDFLARE_ACCOUNT_ID=xxxxx
CLOUDFLARE_ZONE_ID=xxxxx

# 1Password (for env-var-assistant)
OP_SERVICE_ACCOUNT_TOKEN=ops_xxxxx

# n8n (Optional)
N8N_USER=admin
N8N_PASSWORD=your_n8n_password
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678/

# pgAdmin (Optional)
PGADMIN_EMAIL=admin@mc3.local
PGADMIN_PASSWORD=your_pgadmin_password

# Worker Configuration
WORKER_REPLICAS=2
MAX_CONCURRENT_SESSIONS=10

# API Rate Limits
ANTHROPIC_MAX_REQUESTS_PER_MINUTE=50
ANTHROPIC_MAX_TOKENS_PER_MINUTE=100000

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Monitoring
ENABLE_TELEMETRY=true
LOG_LEVEL=info
